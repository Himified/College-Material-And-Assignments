LHLD 4000H
XCHG       ;EXCHANGE WITH DE REGISTER PAIR
LHLD 4002H
MOV A,E
SUB L
STA 4004H
MOV A,D
SBB H      ;SUBTRACT WITH BORROW AC-R-CY
STA 4005H

MVI A,00H
ADI 3AH
ADI 48H
STA 2100H

ANA B ;LOGICAL AND
ANA C
ANA E
STA 3000H
ORA B ;LOGICAL OR
ORA C
ORA E
STA 3001H
MVI A,00H
XRA B ;LOGICAL XOR
XRA C
XRA E
STA 3002H

LHLD 5000H
MOV A,L
CMA   ;1'S COMPLEMENT (SUBTRACT FROM 15)
MOV L,A
MOV A,H
CMA
MOV H,A
SHLD 5002H

LHLD 6000H
MOV A,L
CMA     ;2'S COMPLEMENT = (1'S COMPLEMENT+1)
ADI 01H ;ADD 1 TO LOWER BITS
MOV L,A
MOV A,H
CMA     ;COMPLEMENT HIGHER BITS
MOV H,A
MVI A,00H
ADC H   ;ADD 1 WITH CARRY TO 1'S COMPLEMENT OF HIGHER BITS
MOV H,A
SHLD 6002H

hlt