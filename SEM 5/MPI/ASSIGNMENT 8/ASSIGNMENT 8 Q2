;QUESTION 2
MVI D,03H         ;COUNT IN D
MOV C,D
LXI B,4000H       ;POINT BC PAIR TO OUTPUT BUFFER MEMORY
LXI H,3000H       ;POINT HL PAIR TO INPUT BUFFER MEMORY
LOOP: MOV A,M     ;TRANSFER BCD NUMBER TO ACC.
      CALL BCDBIN
      STAX B      ;STORE CONVERTED BINARY NUMBER AT LOCATION 4000H ONWARDS
      INX H
      INX B
      DCR D
      JNZ LOOP

;ADDITION OF THE BINARY NUMBERS
      XRA A        ;CLEAR THE ACCUMULATOR
      MOV B,A      ;STORE 00H IN REG. B TO CALCULATE CARRY
      LXI H,4000H  ;STORE ADDRESS OF FIRST NUMBER
LABEL1: ADD M
	JNC SKIP   ;SKIP IF THERE IS NO CARRY
	INR B      ;INCREMENT REG. B IF CARRY
SKIP: DCR C
      INX H
      JNZ LABEL1
      STA OUTBUFF  ;STORE SUM AT OUTBUFF
      MOV A,B      ;MOVE CARRY DATA INTO REG. B
      STA OUTBUFFC ;STORE CARRY AT OUTBUFFC
hlt

;BCD TO BINARY CONVERSION
BCDBIN: PUSH D
	PUSH B
	MOV B,A
	ANI 0FH    ;SEPARATE BCD2(LOWER ORDER BITS)
	MOV C,A    ;STORE BCD2 IN REG. C 
	MOV A,B
	ANI 0F0H   ;SEPARATE BCD1(HIGHER ORDER BITS)
	JZ BCDN    ;IF ZERO THEN ONLY ADD BCD2
	RRC        ;ROTATE 4 TIMES TO PLACE BCD1 AS UNPACKED SINGLE DIGIT BCD
	RRC
	RRC
	RRC
	MOV D,A    ;STORE BCD1 IN REG. D
	XRA A      ;CLEAR ACCUMULATOR
	MVI E,0AH
SUM: ADD E         ;MULTIPLY BCD1 BY 10
     DCR D
     JNZ SUM
BCDN: ADD C       ;ADD BCD2 AND BCD1
      POP B
      POP D
      RET

OUTBUFF: EQU 00FEH
OUTBUFFC: EQU 00FFH