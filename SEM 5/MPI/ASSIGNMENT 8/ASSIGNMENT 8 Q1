;QUESTION 1
MVI D,04H	;COUNT IN D
MOV C,D
LXI D,000AH	;POINT DE PAIR TO OUTPUT BUFFER
LXI H,0000h	;POINT HL PAIR TO INPUT BUFFER
LOOP:   MOV A,M
	CALL PWRTEN    ;CALL SUBROUTINE TO LOAD POWERS OF 10
	INX H        
	DCR C
	JNZ LOOP
HLT


PWRTEN:  XCHG 	        ;POINT HL PAIR TO OUTPUT BUFFER AND DE TO INPUT BUFFER 
	 MVI B,64H      ;LOAD 100 IN REG. B 
	 CALL BINTOBCD  ;CALCULATE BCD3
	 MVI B,0AH      ;LOAD 10 IN REG. B
	 CALL BINTOBCD  ;CALCULATE BCD2
	 MOV M,A        ;STORE BCD1
	 INX H
	 XCHG
       	 RET
	 	 	
BINTOBCD: MVI M,0FFH
NXT:	  SUB B
          INR M         ;CLEAR M AND INCREMENT FOR EACH SUBTRACTION
	  JNC NXT       ;IF NUMBER>POWER OF 10? IF YES,ADD 1 TO BUFFER MEMORY
          ADD B         ;IF NO,ADD POWER OF 10 TO GET BACK REMAINDER
	  INX H         ;GO TO NEXT BUFFER LOCATION
   	  RET
	 			 	

